<%- include("partials/header.ejs"); %>
    <title>Blog Master</title>
</head>

<body>

    <%- include("partials/navbarClient.ejs"); %>

    <div class="center-display">
        <div class="container">
          <h1 class="display-4 text-center">Master Blog</h1>
          <p class="lead text-center">Blog criado usando NodeJs, Express, Sequelize (MySql) e outras tecnologias</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class=" border p-3 mt-2">
                    <div class="">
                        <div class="img-mycard">
                            <img src="/img/man.svg" alt="">
                        </div>
                        <div class="card-body">
                            <h6 class="text-center">Gustavo D. Alberico</h6>
                            <p class="card-text text-center"></p>
                        </div>
                    </div>
                </div>
                <div class="border">
                    <div class="social-medias">
                        <a href="#"><i class="fab fa-github" style="color: black;"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#"><i class="fab fa-discord"></i></i></a>
                    </div>
                </div>
           </div>
            <div class="col-lg-9 col-md-8 col-sm-12 ">
                <div class="row">
                    <% articles.forEach(articles =>{ %>
                        <div class="col-md-12 ">
                            
                            <div class="border my-2 p-3">
                                <h3 class=""> <%= articles.title %></h3>
                                <div class="border mt-2 p-2">
                                    
                                    <p class="text-center"> <%- articles.body.substring(0, 450) + "..." %> </p>
                                </div>
                                <span>Categoria: 
                                    <% categories.forEach(categories =>{ %>
                                        <% if(articles.categoryId == categories.id) { %>
                                            <a href="/caterogy/<%= categories.slug  %>"> <%= categories.title %> </a>
                                            <% } %>
                                            <% }) %>
                                </span><br>
                                <span>Autor: 
                                    <% users.forEach(users =>{ %>
                                        <% if(articles.userId == users.id) { %>
                                            <a target="_blank" href="https://twitter.com/home?lang=pt"> <%= users.username %> </a>
                                            <% } %>
                                            <% }) %>
                                </span> <br>
                                
                                <div class="d-inline-block">
                                    <a class="mt-3 d-block" href="/<%= articles.slug %>">Leia o artigo </a>
                                </div>
                            </div>
                        </div>
                   <% }) %>
                </div>
                <div class="d-flex justify-content-center">
                    <nav aria-label="Page navigation example ">
                        <ul class="pagination">                            
                            <% let pageCount = count / 4 %>
                            <% pageCount = Math.ceil(pageCount) %>
                            <% let num = 1 %>
                            <% if(pageCount > 1){ %>
                            <% for(i = 0; i < pageCount; i++){ %>
                                <li class="page-item"><a class="page-link" href="/articles/page/<%= num %>"><%= num %></a></li>
                                <% num++ %>
                            <% } %>
                                <li class="page-item"><a class="page-link" href="/articles/page/2">Pr√≥ximo</a></li>
                            <% } %>
                        </ul>
                  </nav>
                </div>
            </div>
        </div>
        
    </div>

</body>

<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#articleExib",
        
    });
</script>

<%- include("partials/footer.ejs"); %>
